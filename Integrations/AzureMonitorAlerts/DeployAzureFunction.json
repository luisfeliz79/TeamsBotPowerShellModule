{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 20
        },
        "TeamsBotWebHookUrl":{
            "type":"string",
            "defaultValue": ""
        }

       
    },
    "variables":{
        "location":"[resourceGroup().location]",
        "subscriptionId":"[subscription().id]",
        "appServicePlanName":"[concat(parameters('name'), 'Plan')]",
        "appServicePlanId":"[concat(variables('subscriptionId'),'/resourcegroups/', resourceGroup().name, '/providers/Microsoft.Web/serverfarms/', variables('appServicePlanName'))]",
        "sku": "Basic",
        "skucode": "B1",
        "workerSize": "0",
        "workerSizeId": "0",
        "numberOfWorkers":  "1",
        "storageAccountName": "[concat(toLower(parameters('name')), 'sa')]",
        "functionAppName" :"[concat(toLower(parameters('name')), 'func')]",
        "packageUri":"https://github.com/luisfeliz79/TeamsBotPowerShellModule/blob/dev/Integrations/AzureMonitorAlerts/functionapp/releases/AzMonitorTeamsAlertV1.zip?raw=true"       
    },
    "resources": [
        {
            "apiVersion": "2018-11-01",
            "name": "[variables('appServicePlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[variables('location')]",
            "kind": "linux",
            "tags": {},
            "properties": {
                "name": "[variables('appServicePlanName')]",
                "workerSize": "[variables('workerSize')]",
                "workerSizeId": "[variables('workerSizeId')]",
                "numberOfWorkers": "[variables('numberOfWorkers')]",
                "reserved": true,
                "zoneRedundant": false
            },
            "sku": {
                "Tier": "[variables('sku')]",
                "Name": "[variables('skuCode')]"
            }
        },
        {
            "apiVersion": "2018-11-01",
            "name": "[variables('functionAppName')]",
            "type": "Microsoft.Web/sites",
            "kind": "functionapp,linux",
            "location": "[variables('location')]",
            "tags": {},
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', variables('appServicePlanName'))]",
                "[concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]"
            ],
            "properties": {
                "name": "[variables('functionAppName')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~4"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "powershell"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2019-06-01').keys[0].value,';EndpointSuffix=','core.windows.net')]"
                        },
                        {
                            "name": "TeamsBot_WebHookUrl",
                            "value": "[parameters('TeamsBotWebHookUrl')]"
                        },
                        {
                            "name": "WEBSITE_RUN_FROM_PACKAGE",
                            "value": "[variables('packageUri')]"
                          }
                    ],
                    "cors": {
                        "allowedOrigins": [
                            "https://portal.azure.com"
                        ]
                    },
                    "use32BitWorkerProcess": "false",
                    "ftpsState": "FtpsOnly",
                    "linuxFxVersion": "PowerShell|7.2",
                    "alwaysOn": "true"
                },
                "serverFarmId": "[variables('appServicePlanId')]",
                "clientAffinityEnabled": false,
                "virtualNetworkSubnetId": null,
                "httpsOnly": true
            }
        },
        {
            "apiVersion": "2019-06-01",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "location": "[variables('location')]",
            "tags": {},
            "sku": {
                "name": "Standard_LRS"
            },
            "properties": {
                "supportsHttpsTrafficOnly": true,
                "minimumTlsVersion": "TLS1_2"
            }
        }
    ],
    "outputs": {
        "subscriptionId": {
          "type": "string",
          "value": "[variables('subscriptionId')]"
        },
        "appServicePlanId":{
            "type": "string",
            "value": "[variables('appServicePlanId')]"
        }
    }

}